const animateNumberCounter=()=>{document.body.querySelectorAll("[data-animate-counter]").forEach(t=>{const e=t.firstElementChild;e&&0!==Number(e.textContent)&&new Animate({each:1,scrub:!1,toggleActions:"play none none none",start:"top 80%",end:"bottom",extendTimeline:!0},{textContent:0,snap:{textContent:1}},{textContent:Math.trunc(e.textContent),duration:1.8,stagger:.5,snap:{textContent:1},onUpdate(){e.textContent=Math.trunc(e.textContent)}},t,e,!0,!0)})};document.addEventListener("DOMContentLoaded",()=>setTimeout(()=>animateNumberCounter(),300));